# Server Configuration
PORT=5002
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/beta-tech-support
MONGODB_MAX_RETRIES=5
MONGODB_RETRY_INTERVAL=5000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=7d
JWT_COOKIE_EXPIRE=24

# CORS Configuration
ADDITIONAL_ORIGINS=http://localhost:3001,http://127.0.0.1:3001
CORS_MAX_AGE=86400

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_HEALTH=true

# Security
MAX_PAYLOAD_SIZE=2mb
ENABLE_HTTPS=false
SSL_KEY_PATH=
SSL_CERT_PATH=
TRUST_PROXY=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_TO_FILE=false
LOG_FILE_PATH=logs/server.log

# Socket Configuration
SOCKET_PING_TIMEOUT=5000
SOCKET_PING_INTERVAL=10000
SOCKET_UPGRADE_TIMEOUT=5000

# Cache Configuration
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=300

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9100

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=support@beta-tech.com
FRONTEND_URL=http://localhost:3000
