# API Configuration
REACT_APP_API_URL=http://localhost:5002/api
REACT_APP_SOCKET_URL=http://localhost:5002
REACT_APP_API_TIMEOUT=30000
REACT_APP_RETRY_ATTEMPTS=3
REACT_APP_RETRY_DELAY=1000

# Environment
REACT_APP_ENV=development
REACT_APP_VERSION=$npm_package_version
REACT_APP_BUILD_TIME=$BUILD_TIME

# Feature Flags
REACT_APP_ENABLE_SOCKET=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_SERVICE_WORKER=false

# Authentication
REACT_APP_AUTH_STORAGE_KEY=beta_tech_auth
REACT_APP_TOKEN_REFRESH_INTERVAL=300000
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_IDLE_TIMEOUT=900000

# UI Configuration
REACT_APP_ITEMS_PER_PAGE=10
REACT_APP_MAX_FILE_SIZE=2097152
REACT_APP_THEME_MODE=light
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e

# Performance
REACT_APP_ENABLE_QUERY_CACHE=true
REACT_APP_CACHE_TIME=300000
REACT_APP_STALE_TIME=60000
REACT_APP_ENABLE_PREFETCH=true

# Error Handling
REACT_APP_MAX_ERROR_COUNT=3
REACT_APP_ERROR_RESET_TIME=300000

# Logging
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_REMOTE_LOGGING=false
REACT_APP_REMOTE_LOG_URL=

# Socket Configuration
REACT_APP_SOCKET_RECONNECT_ATTEMPTS=5
REACT_APP_SOCKET_RECONNECT_DELAY=2000
REACT_APP_SOCKET_TIMEOUT=10000

# Security
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_HSTS=true
REACT_APP_SECURE_COOKIES=true
